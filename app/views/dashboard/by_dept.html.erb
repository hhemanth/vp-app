	<div class="row">
		
      <%= render "department_list" %>
   
		
  <div class="span7">

	<%= form_tag("dashboard/change_course_status", :method => "post") do %>
	<%= select_tag "ppt_options", "<option>Has PPT</option><option>Has NO PPT</option><option>Has Partial PPT</option>".html_safe  %>
        <%= submit_tag("Has PPT", :class=>"btn btn-primary") %>
