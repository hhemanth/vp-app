              	<% @skip_nil = true %>
                 <%= render "course_table" %>
              </div>
              <div class="tab-pane fade" id="profile">
              	<% @skip_nil = false %>
                 <%= render "course_table" %>
              </div>  
          </div>
    <%end %>
   
        </div> <!-- span 8 -->
